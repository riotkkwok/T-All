div#timeTable(:class=" mode === 1 ? 'editable' : '' ")
    div.filterBox

    div.tt-container
        div.tt-headCol
            ul.tt-dateList.cf
                li.tt-name
                    | Name
            ul.tt-ppl.cf(v-for="ppl in pplList")
                li.tt-name
                    | {{ ppl.name }}
        div.tt-wrapper(@scroll="delayScroll(visibleArea)")
            div.tt-main(:style="dateListUI")
                ul.tt-dateList.cf
                    li.tt-date(v-for="date in dateList")
                        | {{ date.dateStr2 }}
                ul.tt-ppl.cf(v-for="ppl in pplList")
                    li.tt-date(v-for="date in dateList")
                        ul.tt-task(v-if="!ppl[date.dateStr] || !ppl[date.dateStr].leaveType")
                            li.tt-taskItem(@click="selectTask(ppl[date.dateStr][0])", :style="{ backgroundColor: ppl[date.dateStr][0].color }")
                                | {{ ppl[date.dateStr][0].stage }}
                            li.tt-taskItem(@click="selectTask(ppl[date.dateStr][1])", :style="{ backgroundColor: ppl[date.dateStr][1].color }")
                                | {{ ppl[date.dateStr][1].stage }}
                        div.tt-leave(v-if="ppl[date.dateStr] && ppl[date.dateStr].leaveType", @click="")
                            | {{ ppl[date.dateStr].leaveType }}

    div.taskView
        ul.tv-list.cf
            li.tv-item(v-for="task in taskView", :style="{ backgroundColor: task.color }" @click="viewDetail(task.id)")
                | {{ task.name }}

    div#editingToast(v-show="showEditingToast")
        div.g-mask
        div.g-dialog
            div.msg 当前正在编辑，请返回后再次点击查看详情

    div#addTaskDialog(v-show="showAddTaskDialog")
        div.g-mask
        div.g-dialog
            div.msg 是否新建任务记录？
            div.btn-section
                button.back-btn(@click="goBack")
                    | 返回
                button.confirm-btn(@click="addTask")
                    | 确定

